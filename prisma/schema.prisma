generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model MailEntity {
  id Int @id @default(autoincrement())
  subject String 
  message String
  recipients String[]
  date DateTime @default(now())
  user UserEntity @relation(fields: [userId], references: [id])
  userId Int 
}

model UserEntity {
  id Int @id @default(autoincrement())
  email String @unique
  userName String
  password String
  mails MailEntity[]
  sentMails Int @default(0)
  role Role
}

enum Role {
  ADMIN
  USER
}
